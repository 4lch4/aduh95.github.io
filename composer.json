{
    "name": "aduh95/resume",
    "description": "My résumé",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Antoine du HAMEL",
            "email": "duhamelantoine1995@gmail.com"
        }
    ],
    "require": {
        "aduh95/html-generator": "^1.0"
    },
    "autoload": {
        "psr-4" : {
			"aduh95\\Resume\\": "src/class"
		},
		"files" : [
			"config/bootstrap.php",
			"src/middleware/bootstrap.php"
		]
    },
    "scripts": {
        "post-create-project-cmd": [
			"npm install",
			"typings install",
			"echo \"Project is ready!\"",
			"echo \"You can now run the `gulp` command to get started.\""
		],
		"pre-install-cmd": [
			"npm install --production"
		],
		"pre-update-cmd": [
			"npm update",
            "typings update"
		],
		"production" : [
			"php -r \"try{require 'vendor/autoload.php';}catch(Throwable \\$e){echo 'Exception:'.\\$e;exit(9);}\"",
			"gulp clean-uglify",
			"gulp production"
		]
    }
}
